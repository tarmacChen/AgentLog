---
import { getCollection, getEntry, render } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog', ({ data }) => !data.draft);
  return posts.map((post) => ({
    params: { slug: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);

const enPost = await getEntry('blog-en', post.id);
const enContent = enPost ? await render(enPost) : null;
---

<BaseLayout title={post.data.title} description={post.data.description} showTranslate={!!enPost}>
  <article class="prose prose-lg prose-gray dark:prose-invert max-w-none">
    <div id="lang-zh">
      <header class="not-prose mb-8">
        {post.data.heroImage && (
          <img
            src={`${import.meta.env.BASE_URL}${post.data.heroImage}`}
            alt={post.data.title}
            class="w-full aspect-video object-cover rounded-lg mb-6"
          />
        )}
        <div class="flex items-baseline justify-between">
          <time class="text-xs text-gray-400 dark:text-gray-500 uppercase tracking-wide">
            {post.data.pubDate.toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric',
            })}
          </time>
          <button
            id="translate-toggle"
            aria-label="Toggle language"
            disabled={!enPost}
            class={`text-xs font-bold px-2.5 py-1 rounded shrink-0 transition-colors ${enPost ? 'bg-blue-500 text-white hover:bg-blue-400 cursor-pointer' : 'bg-gray-200 dark:bg-gray-700 text-gray-400 dark:text-gray-500 cursor-not-allowed'}`}
          >
            中文
          </button>
        </div>
        <h1 class="text-2xl sm:text-3xl font-bold mt-2 mb-3">{post.data.title}</h1>
        <p class="text-gray-500 dark:text-gray-400">{post.data.description}</p>
        {post.data.tags && (
          <div class="flex gap-2 mt-3 flex-wrap">
            {post.data.tags.map((tag) => (
              <span class="text-xs bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300 px-2 py-0.5 rounded">
                {tag}
              </span>
            ))}
          </div>
        )}
      </header>
      <Content />
    </div>

    {enPost && enContent && (
      <div id="lang-en" class="hidden">
        <header class="not-prose mb-8">
          <time class="text-xs text-gray-400 dark:text-gray-500 uppercase tracking-wide">
            {post.data.pubDate.toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric',
            })}
          </time>
          <h1 class="text-2xl sm:text-3xl font-bold mt-2 mb-3 flex-1">{enPost.data.title}</h1>
          <p class="text-gray-500 dark:text-gray-400">{enPost.data.description}</p>
          {enPost.data.tags && (
            <div class="flex gap-2 mt-3 flex-wrap">
              {enPost.data.tags.map((tag) => (
                <span class="text-xs bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300 px-2 py-0.5 rounded">
                  {tag}
                </span>
              ))}
            </div>
          )}
        </header>
        <enContent.Content />
      </div>
    )}
  </article>
</BaseLayout>
