---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  showTranslate?: boolean;
}

const { title, description = 'AgentLog — a blog about AI agents and experiments', showTranslate = false } = Astro.props;
const base = import.meta.env.BASE_URL.replace(/\/$/, '');
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href={`${base}/images/logo.svg`} />
    <title>{title}</title>
    <!-- Apply saved theme before paint to avoid flash -->
    <script is:inline>
      (function () {
        const saved = localStorage.getItem('theme');
        const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        if (saved === 'dark' || (!saved && prefersDark)) {
          document.documentElement.classList.add('dark');
        }
      })();
    </script>
  </head>
  <body class="min-h-screen bg-white text-gray-900 dark:bg-gray-900 dark:text-gray-100">
    <header class="py-2 sm:py-3">
      <nav class="max-w-3xl mx-auto px-4 flex items-end gap-3 sm:gap-6">
        <a href={base} class="flex items-center gap-1.5 sm:gap-2 text-xl sm:text-2xl font-bold tracking-tight hover:text-blue-400 shrink-0">
          <img src={`${base}/images/logo.svg`} alt="AgentLog logo" class="h-6 w-6 sm:h-7 sm:w-7 block dark:hidden" />
          <img src={`${base}/images/logo-dark.svg`} alt="AgentLog logo" class="h-6 w-6 sm:h-7 sm:w-7 hidden dark:block" />
          AgentLog
        </a>
        <div class="ml-auto flex items-center gap-4 sm:gap-5">
          <a href={`${base}/blog/`} class="text-sm sm:text-base font-medium text-gray-600 dark:text-gray-300 hover:text-blue-400 shrink-0">Posts</a>
          <a href={`${base}/projects/`} class="hidden sm:block text-sm sm:text-base font-medium text-gray-600 dark:text-gray-300 hover:text-blue-400 shrink-0">Projects</a>
          <a href={`${base}/about/`} class="hidden sm:block text-sm sm:text-base font-medium text-gray-600 dark:text-gray-300 hover:text-blue-400 shrink-0">About</a>
          <!-- Search icon -->
          <a href={`${base}/search/`} aria-label="Search" class="text-gray-500 dark:text-gray-400 hover:text-blue-400 dark:hover:text-blue-400 transition-colors shrink-0">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 sm:h-6 sm:w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607z" />
            </svg>
          </a>
          <!-- Dark/light toggle -->
          <button
            id="theme-toggle"
            aria-label="Toggle dark mode"
            class="text-gray-500 dark:text-gray-400 hover:text-blue-400 dark:hover:text-blue-400 transition-colors shrink-0"
          >
            <!-- Sun icon (shown in dark mode to switch to light) -->
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 sm:h-6 sm:w-6 hidden dark:block" fill="none"
                 viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round"
                    d="M12 3v1m0 16v1m8.66-9h-1M4.34 12h-1m15.07-6.07-.71.71M6.34 17.66l-.71.71m12.02 0-.71-.71M6.34 6.34l-.71-.71M12 7a5 5 0 1 0 0 10A5 5 0 0 0 12 7z" />
            </svg>
            <!-- Moon icon (shown in light mode to switch to dark) -->
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 sm:h-6 sm:w-6 block dark:hidden" fill="none"
                 viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round"
                    d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z" />
            </svg>
          </button>
        </div>
      </nav>
    </header>
    <main class="max-w-3xl mx-auto px-4 py-8 sm:py-14">
      <slot />
    </main>
    <footer class="py-6 mt-16">
      <div class="max-w-3xl mx-auto px-4 text-xs text-gray-400 dark:text-gray-500 text-center">
        © {new Date().getFullYear()} AgentLog
      </div>
    </footer>
    <script>
      const toggle = document.getElementById('theme-toggle');
      const html = document.documentElement;

      toggle!.addEventListener('click', () => {
        const isDark = !html.classList.contains('dark');
        html.classList.toggle('dark', isDark);
        localStorage.setItem('theme', isDark ? 'dark' : 'light');
      });
    </script>
    <script>
      (function () {
        const btn = document.getElementById('translate-toggle') as HTMLButtonElement | null;
        if (!btn) return;

        const zhEl = document.getElementById('lang-zh');
        const enEl = document.getElementById('lang-en');
        if (!zhEl || !enEl) return;

        let isEn = localStorage.getItem('lang') === 'en';

        function applyLang(en: boolean) {
          zhEl!.classList.toggle('hidden', en);
          enEl!.classList.toggle('hidden', !en);
          btn!.textContent = en ? 'English' : '中文';
        }

        applyLang(isEn);

        btn.addEventListener('click', () => {
          isEn = !isEn;
          applyLang(isEn);
          localStorage.setItem('lang', isEn ? 'en' : 'zh');
        });
      })();
    </script>
  </body>
</html>
